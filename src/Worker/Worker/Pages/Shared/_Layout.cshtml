<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Worker</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Worker.styles.css" asp-append-version="true" />
</head>
<body class="sidebar-layout">
    <div class="sidebar">
        <div class="sidebar-header">
            <h3>Worker</h3>
        </div>
        <nav class="sidebar-nav">
            <a asp-area="" asp-page="/Index" class="sidebar-link">
                <span>작업 관리</span>
            </a>
            <a asp-area="" asp-page="/Projects" class="sidebar-link">
                <span>프로젝트</span>
            </a>
        </nav>
    </div>

    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
